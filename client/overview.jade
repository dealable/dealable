template(name='navbar')
    header
        h1 {{title}}
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse'
              , data-target='#navbar'
              , aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            // each loop requires js helper, value gets assigned to unknown text
            each arr3
              span.icon-bar
          a.navbar-brand(href='/') dealable
          +loginButtons
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li.active: a(href='/') Overview
            li: a(href='/market') Market
            li: a(href='/addproduct') AddProduct
            li: a(href='/chat') Chat
            li: a(href='https://github.com/dealable/dealable') Github

