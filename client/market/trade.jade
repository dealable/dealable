template(name='trade')
  +navbar
  #main.container.bootcards-container
    .row
      .col-sm-6
        .panel.panel-default.bootcards-chart
          ul.list-group
            li.list-group-item
              a(href="#{mfg_url}" target="_blank") #{name}
            li.list-group-item
              //| current price: #{mid}
              | bid: $#{bid}
              br
              | offer: $#{offer}
            li.list-group-item
              p: div
                h3 Product ID
                | #{_id}
            li.list-group-item
              p: div
                h3 Your Details for the Order
                | User ID: #{userId}
                br
                | Latitude: #{userlat}
                br
                | Longitude: #{userlng}
                //#price_order
              br
              //a.btn.btn-primary.pull-right.hidden-xs(href='#{_id}/place', data-toggle='modal', data-target='#placeModal')
                i.fa.fa-pencil
                span Edit
              //+map
              //+placeTemplate
            img(src="#{img_url}",style="max-height: 300px; max-width: 266px;")

      .col-sm-6
        .panel.panel-default.bootcards-chart
              p: div
                if currentUser
                  +quickForm collection="Orders" type="insert" autosave=true doc=orderDefaults
                else
                  br
                  h2 sign in to trade
                //omitFields
                //id="insertBookForm"
                //input.form-control#tb_price_order(type='text')
                //+insertOrder

                
    .row
      .col-sm-6
          .panel.panel-default.bootcards-chart
            .panel-heading
              h3.panel-title Buyers
            ul.list-group
              +buyers
      .col-sm-6
          .panel.panel-default.bootcards-chart
            .panel-heading
              h3.panel-title Sellers
            ul.list-group
              +sellers
      //.col-sm-6
        .panel.panel-default.bootcards-chart
          h3.panel-title TODO: reactively show Prices by location - $
            //#bar1
          #chartForecastVsQuota.bootcards-chart-canvas
          .panel-footer
            button.btn.btn-default.btn-block(onclick='toggleChartData(event)')
              i.fa.fa-table Show Data
      .col-sm-6
          .panel.panel-default.bootcards-chart
            .panel-heading
              h3.panel-title All Trades
            ul.list-group
              +traded
