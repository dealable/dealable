template(name="FreeLayoutMainMenu")
  ul(id="menu-items" class="nav navbar-nav")
    li(id="menu-item-simple" class="{{menuItemClass 'overview'}}")
      a(href="{{pathFor 'overview'}}")
        | Home page
    li(id="menu-item-simple" class="{{menuItemClass 'trade2'}}")
      a(href="{{pathFor 'trade2'}}")
        | Cool page
        
template(name="CoolPage")
  div(class="page-container container")
    div(class="row")
      div(class="col-md-12" id="content")
        div(class="row" id="title_row")
          div(class="col-md-12")
            div(id="page_menu" class="pull-right")
    div(class="row")
      div(id="menu" class="col-sm-3 col-md-2")
        h2
        +CoolPageSideMenu
      div(id="subcontent" class="col-sm-9 col-md-10")
        +yield region='CoolPageSubcontent'
        

template(name="CoolPageSideMenu")
  ul(id="menu-items" class="nav nav-pills nav-stacked")
    li(id="menu-item-simple" class="{{menuItemClass 'cool_page.sub_page_a'}}")
      a(href="{{pathFor 'cool_page.sub_page_a'}}")
        | Sub-Page A
    li(id="menu-item-simple" class="{{menuItemClass 'cool_page.sub_page_b'}}")
      a(href="{{pathFor 'cool_page.sub_page_b'}}")
        | Sub-Page B
        


template(name="CoolPageSubPageA")
  div(class="page-container container" id="content")
    div(class="row" id="title_row")
      div(class="col-md-12")
        h2(id="page_title" class="pull-left")
          | Sub-page A
        div(id="page_menu" class="pull-right")
    +lorem4

template(name="CoolPageSubPageB")
  div(class="page-container container")
    div(class="row")
      div(class="col-md-12" id="content")
        div(class="row" id="title_row")
          div(class="col-md-12")
            h2(id="page_title" class="pull-left")
              | Sub-page B
            div(id="page_menu" class="pull-right")
        +lorem3
    div(class="row")
      div(class="col-md-12" id="menu")
        +CoolPageSubPageBTabMenu
    div(class="row")
      div(class="col-md-12" id="subcontent")
        +subpage

template(name="CoolPageSubPageBTabMenu")
  ul(id="menu-items" class="nav nav-tabs")
    each tabs
      li(id="menu-item-simple" class="{{menuItemClass routename}}")
        a(href="{{pathFor routename}}")
          | #{tabtitle}

template(name="subpage")
  div(class="page-container container" id="content")
    div(class="row" id="title_row")
      div(class="col-md-12")
        h2(id="page_title" class="pull-left")
          | {{title}}
        div(id="page_menu" class="pull-right")
    +yield region='subpageblurb'
    
